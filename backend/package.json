{
  "name": "mateimarica.dev",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "node copy-frontend && node compile-sass && postcss \"frontend_build/**/*.css\" --no-map --replace && echo PostCSS completed successfully",
    "prod": "npm run build && node minifier && echo Project built! && cross-env NODE_ENV=production pm2 start server.js --name mateimarica.dev --log server.log --time --node-args=\"--max-http-header-size=4096\"",
    "staging": "cross-env NODE_ENV=production nodemon --exec \"npm run build && node minifier && echo Project built! && node server\"",
    "dev": "cross-env NODE_ENV=development nodemon --exec \"npm run build && echo Project built! && node server\""
  },
  "author": "Matei Marica",
  "license": "MIT",
  "dependencies": {
    "@node-minify/core": "^7.1.0",
