{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend for mateimarica.dev",
  "main": "server.js",
  "scripts": {
    "build": "cd ../frontend && ((rm -r build || cp -r src build) || (del /Q build && Xcopy /E /I /Y /Q src build)) && postcss --no-map --use autoprefixer --replace \"build/**/*.css\" && echo Project built successfully",
    "set-local-urls": "replace-in-file --configFile=replace-in-file.config.js",
    "prod": "npm run build && screen cross-env NODE_ENV=production node --max-http-header-size=4096 server",
    "debug-prod": "cross-env NODE_ENV=production nodemon",
    "dev": "cross-env NODE_ENV=development nodemon"
  },
  "author": "Matei Marica",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.4.7",
    "binary-search": "file:./util/binary-search",
    "cross-env": "^7.0.3",
    "date-formatter": "file:./util/date-formatter",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "express-subdomain": "^1.0.5",
    "helmet": "^4.6.0",
    "invalid-json-handler": "file:./middleware/invalid-json-handler",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nodemailer": "^6.7.2",
    "pool-manager": "file:./util/pool-manager",
    "replace-in-file": "^6.3.5",
    "request-sniffer": "file:./middleware/request-sniffer",
    "template-engine": "file:./util/template-engine"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0"
  }
}
