    "@node-minify/terser": "^8.0.5",
    "autoprefixer": "^10.4.7",
    "bcrypt": "^5.1.0",
    "binary-search": "file:./util/binary-search",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-formatter": "file:./util/date-formatter",
    "dotenv": "^10.0.0",
    "email-validator": "^2.0.4",
    "escape-html": "^1.0.3",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "express-subdomain": "^1.0.5",
    "glob": "^8.1.0",
    "helmet": "^4.6.0",
    "invalid-json-handler": "file:./middleware/invalid-json-handler",
