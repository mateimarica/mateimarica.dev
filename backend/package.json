{
  "name": "mateimarica.dev",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "build": "((rm -rf frontend_build ; cp -r ../frontend frontend_build) || (del /F /S /Q frontend_build & xcopy /E /I /Y /Q ..\\frontend frontend_build)) && postcss \"frontend_build/**/*css\" --no-map --replace && renamer --find .scss --replace .css \"./frontend_build/**\" && node minifier && echo Project built successfully",
    "set-local-urls": "replace-in-file --configFile=replace-in-file.config.js",
    "prod": "npm run build && cross-env NODE_ENV=production pm2 start server.js --name mateimarica.dev --log server.log --time --node-args=\"--max-http-header-size=4096\"",
    "staging": "cross-env NODE_ENV=production nodemon",
    "dev": "cross-env NODE_ENV=development nodemon"
  },
  "author": "Matei Marica",
  "license": "MIT",
  "dependencies": {
    "@node-minify/core": "^7.1.0",
    "@node-minify/csso": "^7.1.0",
    "@node-minify/google-closure-compiler": "^7.1.0",
    "@node-minify/html-minifier": "^7.1.0",
    "autoprefixer": "^10.4.7",
    "binary-search": "file:./util/binary-search",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "date-formatter": "file:./util/date-formatter",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.1",
    "express-subdomain": "^1.0.5",
    "glob": "^8.1.0",
    "helmet": "^4.6.0",
    "invalid-json-handler": "file:./middleware/invalid-json-handler",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "nanoid": "3.3.4",
    "nodemailer": "^6.7.2",
    "pm2": "^5.2.0",
    "pool-manager": "file:./util/pool-manager",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-nested": "^5.0.6",
    "redis": "^4.5.1",
    "renamer": "^4.0.0",
    "replace-in-file": "^6.3.5",
    "request-sniffer": "file:./middleware/request-sniffer/",
    "svgo": "^3.0.2",
    "template-engine": "file:./util/template-engine"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
